{
  "name": "@treestone/boilerplate-node-package",
  "description": "A boilerplate for a TS based module",
  "version": "0.0.6",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest --passWithNoTests",
    "lint": "eslint './src/**/*.ts'"
  },
  "exports": {
    "./": "./dist/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged --quiet"
    }
  },
  "lint-staged": {
	"*": "eslint"
  },
  "publishConfig": {
    "scope": "@treestone",
    "access": "restricted",
    "omit": "dev"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.21",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^32.3.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  }
}
